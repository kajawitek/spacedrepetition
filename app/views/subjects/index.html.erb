<h1>My subjects</h1>

  <table class='table'>
    <thead class="table-dark">
      <tr>
        <th>Subject title</th>
        <th>Subject description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% subjects.each do |subject| %>
        <tr>
          <td><%= subject.title %></td>
          <td><%= subject.description %></td>
          <td><%= link_to "Edit", edit_subject_path(subject) %></td>
          <td><%= link_to "Destroy", subject_path(subject), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
        </tr>
      <% end %>
    </tbody>
</table>

<%= link_to "New Subject", new_subject_path %>
